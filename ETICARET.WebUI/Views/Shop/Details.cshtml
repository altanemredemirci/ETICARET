@model ProductDetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-12">
                <img src="~/img/@Model.Product.Images[0].ImageUrl" alt="@Model.Product.Name" class="img-fluid" id="imageBox" />
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Product.Images)
            {
                <div class="col-md-3">
                    <img src="~/img/@item.ImageUrl" alt="@Model.Product.Name" class="img-fluid" onclick="myFunction(this)" />
                </div>
            }

        </div>
    </div>

    <div class="col-md-9">
        <h1 class="mb-3">@Model.Product.Name</h1>
        <hr />
        @foreach (var category in Model.Categories)
        {
            <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
        }

        <div class="mb-3">
            <h4 class="text-primary mb-3">
                @Model.Product.Price TL
            </h4>
            <button type="submit" class="btn btn-primary btn-lg">Add To Cart</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p class="p-3">
            @Html.Raw(Model.Product.Description)
        </p>
    </div>
</div>

<script>
 function myFunction(smallImg){
     var fullImg = document.getElementById("imageBox")
     fullImg.src=smallImg.src
 }
</script>